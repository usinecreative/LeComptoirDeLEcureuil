{% extends "::layout.html.twig" %}

{% block content %}
    <div class="col-lg-9 col-sm-9 col-sm-9 partner-page main-content article">
        <div class="article-header">
            <h2>{{ partner.name }}</h2>
        </div>

        <div class="article-content">
            {% if partner.baseline %}
                <strong>{{ partner.baseline }}</strong><br/>
            {% endif %}

            {{ partner.description | raw }}
        </div>

        {% if partner.website %}
            <div class="article-footer">
                {{ 'lecomptoir.partner.website' | trans }} :
                <a href="{{ partner.website }}" target="_blank">
                    <i class="fa fa-info-circle"></i>&nbsp;{{ partner.website }}
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
