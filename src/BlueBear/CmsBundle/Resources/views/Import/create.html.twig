{% extends '@BlueBearCms/layout.html.twig' %}

{% block content %}
    <h1>{{ 'bluebear.cms.import.create' | trans }}</h1>

    <div class="well">
        <form action="{{ path('bluebear.cms.import.create') }}"
              method="post" class="form-horizontal" enctype="multipart/form-data">
            {{ form_widget(form) }}

            <div class="form-group">
                <div class="text-right button-list">
                    <a href="{{ path('bluebear.cms.import.list') }}" class="btn">
                        <i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;{{ 'bluebear.admin.cancel' | trans }}</a>
                    <button type="submit" value="save" name="submit" class="btn btn-default">
                        {{ 'bluebear.admin.save' | trans }}<i class="fa fa-floppy-o"></i></button>
                    <button type="submit" value="save-return" name="submit" class="btn btn-default">
                        {{ 'bluebear.admin.save_and_return_to_list' | trans }}
                        <i class="fa fa-list"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
