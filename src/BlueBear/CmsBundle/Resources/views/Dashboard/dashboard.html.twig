{% extends "BlueBearCmsBundle::layout.html.twig" %}

{% block container %}
    {# main wrapper #}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ 'lag.cms.dashboard_title' | trans }}</h1>
            </div>
        </div>
        <div class="row">
            {# header items #}
            {% for item in dashboard.headingItems %}
                {% include "@BlueBearCms/Dashboard/dashboard.item.html.twig" %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-8">
                {# Timeline #}
                {% include "@BlueBearCms/Dashboard/dashboard.timeline.html.twig" %}
            </div>
            <div class="col-lg-4">
                {% include "@BlueBearCms/Dashboard/dashboard.notification.html.twig" %}
            </div>
        </div>
    </div>
{% endblock %}
