{% extends "@LeComptoirDeLEcureuilFront/layout.html.twig" %}

{% block latestArticles %}
    <div class="row margin-row">
        <div class="col-lg-12 latest-article">
            <h2>{{ 'lecomptoir.lastest_articles' | trans }}</h2>

            <div class="row">
                {% for article in latestArticles %}
                    {% set articleUrl = path('lecomptoir.article.show', article.urlParameters) %}
                    {% set linkTitle = 'lecomptoir.article.go_to_read' | trans({'%article%': article.title}) %}

                    <div class="col-md-6 article">
                        <h2 class="ribbon">{{ article.category.name }}</h2>
                        <a href=""><img src="/img/cover-batard.jpg"/></a>
                        <span class="date">{{ article.publicationDate | localizeddate('full', 'none') }}</span>

                        <h3>
                            <a href="{{ articleUrl }}" title="{{ linkTitle }}">{{ article.title }}</a>
                        </h3>
                        <a href="{{ articleUrl }}" title="{{ linkTitle }}">
                            <p>{{ article.content | striptags | truncate(350) }}</p>
                        </a>
                        {% if loop.index is divisible by(2) %}
                    </div>
                    <div class="row">
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
