{% extends '@LeComptoirDeLEcureuilFront/layout.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
    <div class="col-lg-9 main-content article">
        <h2>{{ article.title }}</h2>
        <div class="thumbnail">
            {{ article.thumbnail.filepath }}
        </div>
        <div class="article-content">
            {{ article.content | raw }}
        </div>
    </div>
{% endblock %}

